---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/UX4/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-white w-full overflow-x-hidden main:h-[30000px]">
    <slot />
    <script src="../scripts/main-gsap.ts"></script>
    <script src="../scripts/main-script.ts"></script>
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "MD IO Thin";
    src: url("/MD IO Trial/MDIOTrial-Thin.otf");
  }
  @font-face {
    font-family: "MD IO Regular";
    src: url("/MD IO Trial/MDIOTrial-Regular.otf");
  }

  @font-face {
    font-family: "MD IO Semibold";
    src: url("/MD IO Trial/MDIOTrial-Semibold.otf");
  }

  @font-face {
    font-family: "MD IO Bold";
    src: url("/MD IO Trial/MDIOTrial-Bold.otf");
  }

  @font-face {
    font-family: "MD System Medium";
    src: url("/MD System Trial/MDSystemTrial-Medium.otf");
  }

  @font-face {
    font-family: "MD System Black";
    src: url("/MD System Trial/MDSystemTrial-Black.otf");
  }

  h3 {
    @apply font-io-regular text-[32px];
  }

  h4 {
    @apply font-io-bold text-[25px];
  }

  p,
  span {
    @apply max-w-[600px] leading-loose;
    @apply font-system-medium;

    b {
      @apply font-system-black;
    }
  }

  p {
    @apply pb-20;
  }

  .visible-page-width {
    min-width: calc(100vw - 25vh);
  }
</style>
