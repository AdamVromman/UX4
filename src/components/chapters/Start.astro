---
import Head from "../Head.astro";
---

<div id="start" class="visible-page-width h-full relative w-max">
  <span
    class="parallax-plane-1-start text-green font-io-thin text-7xl relative top-[5%] left-[40%]"
    >February <span class="font-io-bold">2024</span></span
  >
  <div
    class="title-line bg-green w-[3.5px] absolute left-[40%] translate-x-2 top-[5%] bottom-[25%] z-20"
  >
  </div>
  <h3
    class="parallax-plane-1-start text-orange bottom-[25%] left-[40%] absolute whitespace-nowrap z-20"
  >
    <span class="font-io-bold">S</span>tart of the project.
  </h3>

  <div class="heads flex flex-row w-max absolute z-10">
    <div class="heads-circle"></div>
    <Head
      color="orange"
      name="Ele"
      role="Shaper, Plant, Resource Investigator"
      size="big"
    />
    <Head
      color="green"
      name="Marats"
      role="Shaper, Specialist, Monitor Evaluator"
      size="big"
    />
    <Head
      color="blue"
      name="Ella"
      role="Shaper, Implementer, Teamworker"
      size="big"
    />
    <Head
      color="grey"
      name="Adam"
      role="Shaper, Completer, Coordinator"
      size="big"
    />
    <Head
      color="orange"
      name="Rama"
      role="Entertainer, Toy Collector"
      size="small"
    />
    <Head
      color="green"
      name="Vanya"
      role="Pasta Maker, Prototype Tester"
      size="small"
    />
    <Head
      color="blue"
      name="Rene"
      role="Barker, Portable Heater"
      size="small"
    />
  </div>

